<%- include("template/header",{tituloP:"Mascotas"}) %> 
    <div class="container">

        <a class="btn btn-success btn-block my-4" href="/mascotas/crear">Crear</a>
        <% if (array.length > 0) { %>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Acción</th>
                    </tr>
                </thead>
            <% array.forEach(element => { %>
                <tbody>
                    <tr>
                        <th scope="col"><%= element?.id %> </th>
                        <td ><%= element?.nombre %> </th>
                        <td ><%= element?.descripcion %> </th>
                        <td ><button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button> <button class="btn btn-warning"><i class="fas fa-edit"></i></button></th>
                    </tr>
                </tbody>
            <% }) %>
            </table>
        <% } %>
    </div>
    <%- include("template/footer") %> 